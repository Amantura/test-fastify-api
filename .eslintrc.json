{
  "root": true,
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "indent": ["error", 2],
    "no-unused-vars": ["warn"],
    "no-useless-catch": "off",
    "no-undef": "off",
    "quotes": [
      "error",
      "single"
    ],
    "semi": [2, "never"]
  }
}
